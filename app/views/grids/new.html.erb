<div class="row justify-content-center">
  <div class="col-12 col-md-6">
    <div class="custom-form">
      <h2>Nouvelle partie</h2>
      <%= simple_form_for @grid do |f| %>
        <%= f.association :opponent, 
                          collection: User.all.excluding(current_user).collect{|u| [u.nickname, u.id]},
                          label: "Choississez votre adversaire :" %>
        <div class="form-actions">
          <%= f.submit "Jouer!", class:"btn btn-primary" %>
        </div>
      <% end %>
      
    </div>
  </div>
</div>